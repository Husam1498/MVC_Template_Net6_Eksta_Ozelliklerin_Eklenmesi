@model EditUserModel

<div class="modal-header">
    <h1 class="modal-title fs-5">Edit User </h1>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
    <form id="frmEditUser" asp-action="EditUser" method="post" data-ajax="true" data_ajax-method="Post" data-ajax_update="#modalEditContent" >
        <div asp-validation-summary="ModelOnly" class="text-danger small"> </div>
        <div class="form-group">
            <label asp-for="Fullname" class="form-label">Fullname</label>
            <input asp-for="Fullname" class="form-control" placeholder="john" />
            <span asp-validation-for="Fullname" class="text-danger small"></span>
        </div>

        <div class="form-group">
            <label asp-for="Username" class="form-label">Username</label>
            <input asp-for="Username" class="form-control" placeholder="john" />
            <span asp-validation-for="Username" class="text-danger small"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password" class="form-label">Password</label>
            <input asp-for="Password" class="form-control" placeholder="P@ssword" />
            <span asp-validation-for="Password" class="text-danger small"></span>
        </div>
        <div class="form-group">
            <label asp-for="RePassword" class="form-label">RePassword</label>
            <input asp-for="RePassword" class="form-control" placeholder="P@ssword" />
            <span asp-validation-for="RePassword" class="text-danger small"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Role" class="form-label">Role</label>

            <select asp-for="Role" class="form-select">
                <option value=""> Please Select </option>
                <option value="admin">Admin </option>
                <option value="user"> User </option>
                <option value="user_pro"> User Pro </option>
            </select>
            <span asp-validation-for="Role" class="text-danger small"></span>
        </div>

        <div class="form-group mb-3">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" asp-for="Locked" />
                <label class="form-check-label" asp-for="Locked">
                    Locked
                </label>
            </div>
        </div>
        <input type="hidden" asp-for="Id"/>
    </form>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Close</button>
    <button type="submit" class="btn btn-primary btn-sm" form="frmEditUser"><i class="fa fa-save me-2 "></i>Save changes</button>
</div>




