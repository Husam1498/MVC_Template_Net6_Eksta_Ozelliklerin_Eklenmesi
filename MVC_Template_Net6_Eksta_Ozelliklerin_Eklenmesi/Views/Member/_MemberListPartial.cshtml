@model List<UserModel>

<table class="table table-hover table-sm">
    <thead>
        <tr>
            <th>Fullname</th>
            <th>Username</th>
            <th>Locked</th>
            <th>Created</th>
            <th>Role</th>
            <th></th>
        </tr>

    </thead>
    <tbody>
        @foreach (UserModel user in Model)
        {
            <tr>
                <td>@user.Fullname</td>
                <td>@user.UserName</td>
                <td>
                    @if (user.Locked)
                    {
                        <i class="fa fa-check text-success"></i>
                    }
                    else
                    {
                        <i class="fa fa-times text-danger"></i>
                    }
                </td>
                <td>@user.CreatedAt</td>
                <td>@user.Role</td>
                <td class="text-end">

                    <a asp-action="EditUserPartial" asp-route-id="@user.Id" class="btn btn-info btn-sm text-white"
                       data-bs-toggle="modal" data-bs-target="#modalEdit" class="btn btn-primary btn-sm "
                       data-ajax="true" data-ajax-method="Get" data-ajax-update="#moadEditContent">
                        <i class="fa fa-edit me-2 "></i>Edit</a>

                    <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-danger btn-sm" data-ajax="true" data-ajax-method="Get" data-ajax-update="#panel"
                       data-ajax-confirm="Bu kaydı Silmek istediğinize Eminmisisniz: @user.UserName ?">
                        <i class="fa fa-trash me-2 "></i>Del
                    </a>
                </td>

            </tr>
        }

    </tbody>

</table>